{
    "name": "ires",
    "version": "1.0.0",
    "description": "This is a chrome extension which can mock http requests, intercepts requests & responds, and modifies their content.",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": ["storage"],
    "background": {
        "scripts": ["dist/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "./dist/popup.html"
    },
    
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "file://*/*"
            ],
            "js": ["dist/content.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": ["/dist/injects.js"],
    "icons":  {
        "16": "/dist/img/mask.png",
        "48": "/dist/img/mask.png",
        "128": "/dist/img/mask.png"
    }
}